---
import Layout from "../layouts/Layout.astro";
import Menu from "../components/Menu.astro";
---

<Layout>
  <div class="flex flex-col h-full bg-gradient-to-br from-purple-400 to-blue-500">
    <div class="p-8">
      <Menu />
    </div>
    <div class="flex-1 flex flex-col items-center justify-center">
      <h1 class="text-4xl font-bold mb-4 text-white">Welcome to SVG Generator</h1>
      <p class="mb-6 text-lg text-white">Create and render SVGs from prompts.</p>
      <a href="generator" class="btn btn-secondary">Go to SVG Generator</a>
    </div>
  </div>
</Layout>