---
import Layout from "../layouts/Layout.astro";
import Menu from "../components/Menu.astro";
---

<Layout>
    <div
        class="h-screen bg-gradient-to-br from-purple-400 to-blue-500 p-4 flex flex-col"
    >
        <Menu />
        <div class="flex gap-4 flex-1 mb-4">
            <div
                class="flex-1 bg-white rounded-lg p-8 flex items-center justify-center"
                id="svg-container"
            >
            </div>

            <div
                class="flex-1 bg-gray-900 rounded-lg p-4 text-green-400 font-mono text-xs overflow-auto"
                id="svg-output"
            >
            </div>
        </div>

        <div class="flex gap-4 items-center">
            <input
                type="text"
                value=""
                class="input input-bordered flex-1 bg-white text-black"
                placeholder="Enter your prompt..."
                id="user-prompt"
            />
            <button
                class="btn bg-purple-700 hover:bg-blue-600 text-white border-none px-8"
                id="generate-button"
            >
                Generate
            </button>
            <button
                class="btn bg-gray-600 hover:bg-blue-600 text-white border-none px-8"
                id="save-button"
            >
                Save SVG
            </button>
        </div>
    </div>
</Layout>
<script>
    //@ts-nocheck

    async function generateSVG(prompt) {
        console.log("Generating SVG for prompt:", prompt);
        const res = await fetch("/api/generateSVG", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({prompt}),
        });
        const data = await res.json();
        return data.svg;
    }

    async function handleSubmit() {
        let prompt = "";
        let svgCode = "";
        const promptElement = document.getElementById("user-prompt");
        prompt = promptElement ? promptElement.value : "";
        console.log("submitted: ", prompt); // message affiché sur votre console d'inspecteur dans le navigateur
        const svgContainer = document.getElementById("svg-container");
        let svgOutput = document.getElementById("svg-output");
        svgCode = await generateSVG(prompt);
        console.log("svgCode: ", svgCode);
        svgOutput.textContent = svgCode;
        svgContainer.innerHTML = svgCode;
        generateButton.disabled = false;
    }

    async function saveSVG() {
        const svgOutput = document.getElementById("svg-output");
        const promptElement = document.getElementById("user-prompt");

        if (!svgOutput || !svgOutput.textContent.trim()) {
            alert("Générez d'abord un SVG avant de sauvegarder !");
            return;
        }

        const svgCode = svgOutput.textContent;
        const prompt = promptElement ? promptElement.value : "";

        // Demander un nom pour le SVG
        const name = window.prompt(
            "Nom pour votre SVG :",
            `SVG_${new Date().toISOString().slice(0, 10)}`,
        );

        if (name === null) return; // Utilisateur a annulé

        try {
            const saveButton = document.getElementById("save-button");
            saveButton.disabled = true;
            saveButton.textContent = "Sauvegarde...";

            const response = await fetch("/api/saveSVG", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    name: name,
                    code: svgCode,
                    prompt: prompt,
                }),
            });

            const data = await response.json();

            if (data.success) {
                alert("SVG sauvegardé avec succès !");
            } else {
                alert("Erreur : " + data.error);
            }
        } catch (error) {
            alert("Erreur de sauvegarde : " + error.message);
        } finally {
            const saveButton = document.getElementById("save-button");
            saveButton.disabled = false;
            saveButton.textContent = "Save SVG";
        }
    }

    const generateButton = document.getElementById("generate-button");
    if (generateButton) {
        generateButton.addEventListener("click", handleSubmit);
    }

    // Connecter le bouton Save SVG
    const saveButton = document.getElementById("save-button");
    if (saveButton) {
        saveButton.addEventListener("click", saveSVG);
    }
</script>
