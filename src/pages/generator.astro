---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <div class="h-screen bg-gradient-to-br from-purple-400 to-blue-500 p-4 flex flex-col">
        <div class="flex-1 flex flex-col max-w-none w-full">
            {/* Navigation */}
            <div class="flex gap-4 mb-6">
                <button class="btn btn-ghost text-white">Home</button>
                <button class="btn btn-ghost text-white bg-purple-600">
                    Generator
                </button>
                <button class="btn btn-ghost text-white">Library</button>
            </div>

            {/* Main content area - takes remaining space */}
            <div class="flex gap-4 flex-1 mb-4">
                <div
                    class="flex-1 bg-white rounded-lg p-8 flex items-center justify-center">
                   
                </div>

                <div
                    class="flex-1 bg-gray-900 rounded-lg p-4 text-green-400 font-mono text-xs overflow-auto">
                    
                </div>
            </div>

            {/* Bottom input area */}
            <div class="flex gap-4 items-center">
                <input
                    type="text"
                    value="car"
                    class="input input-bordered flex-1 bg-white text-black"
                    placeholder="Enter your prompt..."
                />
                <button
                    class="btn bg-red-500 hover:bg-red-600 text-white border-none px-8">
                    Generate
                </button>
            </div>
        </div>
    </div>
</Layout>
